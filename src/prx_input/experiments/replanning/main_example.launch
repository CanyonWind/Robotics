<!-- This file has been tested on PRACSYS revision  -->

<launch>
  <rosparam command="load" file="$(find prx_input)/templates/spaces/space_types.yaml"/>
  <include ns="simulation" file="$(find prx_input)/experiments/replanning/simulation/simulation.launch"/>
  <node name="simulation" pkg="prx_simulation" type="prx_simulation"
        required="false"   launch-prefix="" args="simulation" output="screen" />
            
  <include file="$(find prx_input)/experiments/replanning/planning/planning.launch"/>
  <include file="$(find prx_input)/templates/visualization/visualization.launch"/>
        
  <rosparam ns="visualization/viewer/scene" >
   line_thickness: 3
  </rosparam>

</launch>
